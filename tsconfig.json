{
  "compilerOptions": {
    "module": "ESNext",
    "target": "es2020",
    "lib": ["ESNext"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts", ".eslintrc.cjs"],
  "exclude": ["dist", "node_modules"]
}
